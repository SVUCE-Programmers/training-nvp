{{#if project}}
    <h1>{{project.name}}</h1>
    <div>
        <img src="{{project.image}}">
    </div>
    <div>
        <p>{{project.description}}</p>
    </div>

    {{#each project.comments}}
        <div class="row">
            Name: {{name}}
            Comment: {{title}}
            Date: {{createdAt}}
        </div>
    {{/each}}
{{/if}}